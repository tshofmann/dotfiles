#!/usr/bin/env zsh
# ============================================================
# fzf-lib - Gemeinsame Funktionen f端r fzf-Helper
# ============================================================
# Zweck   : Geteilte Utilities f端r fa-preview etc.
# Pfad    : ~/.config/fzf/fzf-lib
# ============================================================
# Hinweis : Wird von fzf-Helpern per 'source' eingebunden
#           Keine direkte Ausf端hrung vorgesehen
# ============================================================

# Guard: Nicht doppelt laden
[[ -n "${FZF_LIB_LOADED:-}" ]] && return 0
FZF_LIB_LOADED=1

# ------------------------------------------------------------
# Shell-Farben laden (Catppuccin Mocha)
# ------------------------------------------------------------
_fzf_load_colors() {
    local colors_file="${XDG_CONFIG_HOME:-$HOME/.config}/theme-colors"
    [[ -f "$colors_file" ]] && source "$colors_file"
    
    # Fallback: leere Werte wenn theme-colors nicht verf端gbar
    : "${C_MAUVE:=}"
    : "${C_GREEN:=}"
    : "${C_BLUE:=}"
    : "${C_RED:=}"
    : "${C_TEXT:=}"
    : "${C_RESET:=}"
}

# ------------------------------------------------------------
# ANSI-Escape-Codes entfernen
# ------------------------------------------------------------
# Verwendung: echo "$text" | _fzf_strip_ansi
_fzf_strip_ansi() {
    sed 's/\x1b\[[0-9;]*m//g'
}

# Farben beim Laden initialisieren
_fzf_load_colors
