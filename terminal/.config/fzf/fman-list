#!/usr/bin/env zsh
# ============================================================
# fman-list - Listet man-Pages oder tldr-Seiten
# ============================================================
# Zweck   : Datenquelle fÃ¼r fman je nach Modus
# Pfad    : ~/.config/fzf/fman-list
# Aufruf  : fman-list [man|tldr]
# ============================================================

local mode="${1:-man}"

case "$mode" in
    man)
        # Nur Sektion 1 (Benutzer-Kommandos)
        man -k . 2>/dev/null | grep ' (1) '
        ;;
    tldr)
        tldr --list 2>/dev/null
        ;;
    *)
        echo "Unbekannter Modus: $mode" >&2
        exit 1
        ;;
esac
